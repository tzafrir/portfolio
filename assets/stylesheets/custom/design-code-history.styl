ul, ol
  font-size: 1.2rem;
  line-height: 1.6rem;


.content
  section
    width 100%
    padding 0
    margin 0
    position relative
    max-width 100%
    ul
      text-align left
      list-style circle
      width 55rem
      max-width 90%
      margin 2rem auto

  .team, .milestone, .message
    width 55rem
    max-width 90%
    margin 0 auto !important
    font-family: freight-sans-pro, sans-serif;

  img 
    display: block;
    margin: 3rem auto;
    border: 10px solid #eee;
    max-width:100%;
  

  .message + p, p + .message,
  .milestone + p, p + .milestone,
  p + .notes, .notes + p,
  .message + .milestone,
  .milestone + .message,
  .team + p, p + .team
    margin-top: 3rem !important;
  

  .message
    text-align left
    margin: 30px 0;
    font-family: freight-sans-pro, sans-serif
    position: relative;
    margin-top 2rem !important
    .contents
      padding: 18px 26px 20px;
      margin-left: 30px !important
      font-size: 1rem;
      line-height: 1.6rem;
      margin-top: -10px;
      background: #eee;
    .details
      height 40px
      font-family: freight-sans-pro, sans-serif
    .senderName, .sentVia
      margin-top -2px
      font-family: freight-sans-pro, sans-serif
    .senderName
      font-family: freight-sans-pro, sans-serif
      font-weight: 500;
      font-size: 1.1rem;
      display: inline-block;
      padding-left: 55px;
    .sentVia
      display: inline-block;
      position: absolute;
      right:0;
      margin-left: 5px;
      text-align: right;
      font-size: 1rem;
      color: #bbb;
    .protocol
      font-style italic
    .profilePic
      background: #333;
      display: inline-block;
      width: 40px;
      height: 40px;
      position: absolute;
      border: 0;
      margin: 0;

  .profilePic
    background: #333;
    display: inline-block;
    width: 40px;
    height: 40px;
    position: absolute;
    border: 0;
    margin: 0;

  .org div, .org p, .org span, .orgTitle
    font-family: freight-sans-pro, sans-serif;

  .team
    clearfix()
    margin 50px -30px
    text-align center
    &:after
      content ''
      display table
      clear both
    .profilePic
      margin: 20px auto 10px;
      position: relative;
    p.orgTitle
      padding-top: 20px;
      margin-bottom: 0;    
      text-align left
      font-size: 1.4rem;
      max-width: 100%
      border-bottom: 2px solid #bbb;
      color: #aaa;
    .org
      clearfix()
      text-align left
      clear:both;
      &:first-child .orgTitle
        padding-top: 5px;
    .person
      clearfix()
      background: #eee;
      padding: 10px;
      float:left;
      width: 19.2%;
      height: 180px;
      font-size: 0.8rem;
      font-weight: bold;
      text-align: center;
      margin: 1% 1% 0 0;
      .name
        margin: 10px auto 0;
        font-family: freight-sans-pro, sans-serif;
        font-size: 1.1rem;
        text-align center
      .title
        text-align center
        font-size: 0.9rem;
        font-weight: normal;
        margin-top: 0;
      &:nth-child(5n+1)
        margin-right 0


  .milestone
    font-family: freight-sans-pro, sans-serif;
    font-size: 1rem;
    text-align left
    max-width: 100%
    margin-top 1rem !important;
    .date
      font-family: freight-sans-pro, sans-serif;
      background: #ede122;
      padding: 20px 0;
      position: absolute;
      margin-bottom: -20px;
      width: 6.5rem;
      text-align: center;
      margin: 0;
      font-weight: bold;
      font-size: 1rem;
    .happening
      font-family: freight-sans-pro, sans-serif;
      background: #eee;
      padding: 20px;
      padding-left: 30px;
      border-left: 110px solid #ede122;
      margin: 0;
      clear: both;
      font-size: 1rem;

  .notes
    background: #eee;
    font-family: freight-sans-pro, sans-serif;
    padding: 20px;
    margin-left: 30px;

  p:first-child
    margin-top: 0;

  ul, ol
    margin: 0 25px;

  iframe
    max-width: 100%;
    &.brand
      width: 100%;
      height: 400px;
      margin: 3rem 0;
    &.youtube
      display: block;
      margin: 3rem auto;

  #lessons ul
    margin: 0;
    li
      margin: 0;
      margin-bottom: 20px;
      padding: 20px;
      list-style: none;
      background: #eee;
      font-family: freight-sans-pro, sans-serif;

  .toc
    text-align: left !important
    position: fixed;
    left: 10px;
    top: 10px;
    opacity: 0.5;
    transform: scale(5);
    transition: all 0.4s;
    font-size: 1.1rem;
    height: 50px;
    background: #fbfbfb;
    overflow: hidden;
    z-index: 99999999;
    &:hover
      opacity 1
      cursor pointer
    h3
      margin: 10px 10px 5px;
    ol
      width: 100%;
      li
        width: 100%;
        list-style: decimal
        padding: 4px 4px 4px 0;
        margin-left: 10px;
        font-family: freight-sans-pro, sans-serif; 
        font-size: 1rem;
        a
          display: block;
          color: black;
          &:hover
            color: #3bbeaa;
    &.tocOn
      opacity 1
      height 510px
      &:hover
        cursor default
    span.arrow
      font-size: 0.7rem;
      padding-bottom: 1px;
      position: relative;
      top: -1px;

@media all and (max-width: 870px) and (min-width: 520px)
  .content
    .person
      width: 32% !important;
      height: 180px;
      margin: 2% 2% 0 0;
      &:nth-child(5n+1)
        margin-right: 2% !important;
      &:nth-child(3n+1)
        margin-right: 0 !important;
  .milestone
    max-width 90% !important


@media all and (max-width: 570px), (max-device-width: 568px)
  html
    font-size: 14px;

  .content
    .person
      width: 48% !important;
      height: 180px;
      margin: 2% 2% 0 0 !important;
      &:nth-child(5n+1)
        margin-right: 2% !important
      &:nth-child(3n+1)
        margin-right: 2% !important;
      &:nth-child(2n+1)
        margin-right: 0 !important;

    p.sentVia
      display: none !important;

    div.message div.contents
      margin-left: 0;
      padding-top: 30px;

    .milestone
      max-width 90% !important
      .date
        position: relative !important;
        margin-bottom: 0;
        padding: 8px;
        width: 6rem;
      .happening
        border-left-width: 2px;

      .team
        margin: 50px -1%;

    .toc 
      background: #333 !important;
      color: #eee;
      width: 50px;
      height:50px;
      border-radius:100%;
      h3
        text-indent: -1000px;
        background-image: url('/assets/images/blog/design-code-history/burger.svg');
        width: 30px;
        height: 30px;
        color: white;
        fill: white;
      &.tocOn
        border-radius: 0;
        width: 100%;
        height: 100% !important;
        margin: 0;
        top: 0;
        left: 0;
        padding: 10px;
        h3
          text-indent: 0;
          margin 0 auto
          background: none;
          width: auto;
          height: auto;
        ul
          margin 0 auto
          li
            font-size: 1.3rem;
            margin-bottom:0.2rem; 
      span.arrow
        display none

      a
        color: #eee;
        &:hover {

        }

