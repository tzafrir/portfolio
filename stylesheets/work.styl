a[target="_blank"]:before
  content: '(external) ' //TODO replace with icon

.workPage
  header
    nav
      position relative
      width 30rem
      max-width 100%
      margin 0 auto
      padding-left 1rem
      a
        position absolute
        display block
        top 40%
        text-align center
        font-size 1.4rem
        &.home
          left 10%
        &.blog
          right 10%
    h1
      margin-top 2rem
      margin-bottom 0.5rem
    h2
      font-family "freight-sans-pro", sans-serif
      font-weight 400
      font-size 1.5rem
      padding-top 0

  h2, section
    &:before
      display: none

  .thisProject
    padding 0 2rem
    p, h2
      padding-top 0
      text-align left
      max-width 45rem
      margin 0 auto
    h2
      font-family "freight-display-pro", serif
      font-size 1.6rem
      margin 3rem auto 0.4rem
    p
      font-family "freight-sans-pro", sans-serif

    img
      max-width 100%
      margin 2rem auto
      display block

    figure
      clearfix()
      max-width 55em
      margin 2rem auto
      width auto
      img
        max-width 100%
        border 2px solid #ddd
        margin 0 auto
      figcaption
        margin-top -3px
        background #ddd
        padding 1rem
        line-height 1.3rem
        text-align center

  footer
    margin 3rem auto
    padding-top 0
    text-align center

  ul.work
    li.project
      &.current
        display none
        background-image url('../images/grey.jpg')
        a:hover
          border 2px solid black
          background transparent
          padding-top 1.4rem
          &:after
            display none


@media all and (min-width: 45rem)
  .current
    display block !important
  .workPage .thisProject
    padding 4rem

@media all and (min-width: 65rem)
  .workPage .thisProject
      padding 0